{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "**/*.html", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/signup",
      "dest": "/api/signup.js"
    },
    {
      "src": "/api/reset", 
      "dest": "/api/reset.js"
    },
    {
      "src": "/api/deposits_monitor",
      "dest": "/api/deposits_monitor.js"
    },
    {
      "src": "/",
      "dest": "/login.html"
    }
  ],
  "crons": [
    {
      "path": "/api/deposits_monitor",
      "schedule": "*/2 * * * *"
    }
  ]
}
